<div class="block block-hero" style="padding: 60px 20px; text-align: center; background: {{ block.payload.background ?? '#f5f5f5' }};">
    {% if block.payload.title is defined %}
        <h1 style="font-size: 2.5em; margin-bottom: 20px;">{{ block.payload.title }}</h1>
    {% endif %}
    {% if block.payload.subtitle is defined %}
        <p style="font-size: 1.2em; margin-bottom: 30px;">{{ block.payload.subtitle }}</p>
    {% endif %}
    {% if block.payload.buttonText is defined and block.payload.buttonUrl is defined %}
        <a href="{{ block.payload.buttonUrl }}" style="display: inline-block; padding: 12px 30px; background: #007bff; color: white; text-decoration: none; border-radius: 4px;">
            {{ block.payload.buttonText }}
        </a>
    {% endif %}
</div>
