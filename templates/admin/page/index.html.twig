{% extends 'admin/layout.html.twig' %}

{% block admin_title %}Pages{% endblock %}

{% block admin_content %}
    <h1>Pages</h1>
    <a href="{{ path('admin_page_new') }}" style="display: inline-block; margin-bottom: 20px; padding: 10px 20px; background: #28a745; color: white; text-decoration: none;">Nouvelle page</a>

    <table style="width: 100%; border-collapse: collapse;">
        <thead>
            <tr style="background: #f5f5f5;">
                <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">ID</th>
                <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">Titre</th>
                <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">Slug</th>
                <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">Locale</th>
                <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">Status</th>
                <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for page in pages %}
                <tr>
                    <td style="padding: 10px; border: 1px solid #ddd;">{{ page.id }}</td>
                    <td style="padding: 10px; border: 1px solid #ddd;">{{ page.title }}</td>
                    <td style="padding: 10px; border: 1px solid #ddd;">{{ page.slug }}</td>
                    <td style="padding: 10px; border: 1px solid #ddd;">{{ page.locale }}</td>
                    <td style="padding: 10px; border: 1px solid #ddd;">{{ page.status }}</td>
                    <td style="padding: 10px; border: 1px solid #ddd;">
                        <a href="{{ path('admin_page_show', {id: page.id}) }}">Voir</a> |
                        <a href="{{ path('admin_page_edit', {id: page.id}) }}">Modifier</a> |
                        <a href="{{ path('admin_block_index', {pageId: page.id}) }}">Blocs</a> |
                        <form method="post" action="{{ path('admin_page_delete', {id: page.id}) }}" style="display: inline;" onsubmit="return confirm('Supprimer cette page ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ page.id) }}">
                            <button type="submit" style="background: none; border: none; color: red; cursor: pointer; text-decoration: underline;">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" style="padding: 20px; text-align: center;">Aucune page</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
