{% extends 'admin/layout.html.twig' %}

{% block admin_title %}Media{% endblock %}

{% block admin_content %}
    <h1>Media</h1>
    <a href="{{ path('admin_media_new') }}" style="display: inline-block; margin-bottom: 20px; padding: 10px 20px; background: #28a745; color: white; text-decoration: none;">Nouveau media</a>

    <table style="width: 100%; border-collapse: collapse;">
        <thead>
            <tr style="background: #f5f5f5;">
                <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">ID</th>
                <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">Path</th>
                <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">Alt</th>
                <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for item in media %}
                <tr>
                    <td style="padding: 10px; border: 1px solid #ddd;">{{ item.id }}</td>
                    <td style="padding: 10px; border: 1px solid #ddd;">{{ item.path }}</td>
                    <td style="padding: 10px; border: 1px solid #ddd;">{{ item.alt ?? 'N/A' }}</td>
                    <td style="padding: 10px; border: 1px solid #ddd;">
                        <a href="{{ path('admin_media_edit', {id: item.id}) }}">Modifier</a> |
                        <form method="post" action="{{ path('admin_media_delete', {id: item.id}) }}" style="display: inline;" onsubmit="return confirm('Supprimer ce media ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
                            <button type="submit" style="background: none; border: none; color: red; cursor: pointer; text-decoration: underline;">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" style="padding: 20px; text-align: center;">Aucun media</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
