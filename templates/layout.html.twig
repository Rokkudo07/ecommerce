{% extends 'base.html.twig' %}

{% block title %}
    {% if page is defined and page %}
        {{ page.seoTitle ?? page.title }} - Marketing CMS
    {% else %}
        Marketing CMS
    {% endif %}
{% endblock %}

{% block body %}
    <header>
        <nav>
            <a href="{{ path('home') }}">Accueil</a>
        </nav>
    </header>

    <main>
        {% block content %}{% endblock %}
    </main>

    <footer>
        <p>&copy; {{ 'now'|date('Y') }} Marketing CMS</p>
    </footer>
{% endblock %}
