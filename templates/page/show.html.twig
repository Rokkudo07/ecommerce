{% extends 'layout.html.twig' %}

{% block title %}{{ page.seoTitle ?? page.title }}{% endblock %}

{% block content %}
    <article>
        <h1>{{ page.title }}</h1>

        {% if page.seoDescription %}
            <meta name="description" content="{{ page.seoDescription }}">
        {% endif %}

        {% for block in page.blocks %}
            {{ render_block(block) }}
        {% endfor %}
    </article>
{% endblock %}
