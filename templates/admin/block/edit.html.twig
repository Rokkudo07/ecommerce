{% extends 'admin/layout.html.twig' %}

{% block admin_title %}Modifier le bloc{% endblock %}

{% block admin_content %}
    <h1>Modifier le bloc</h1>
    <a href="{{ path('admin_block_index', {pageId: page.id}) }}">‚Üê Retour</a>

    <form method="post" style="max-width: 600px; margin-top: 20px;">
        <div style="margin: 15px 0;">
            <label for="type">Type *</label>
            <input type="text" id="type" name="type" value="{{ block.type }}" required style="width: 100%; padding: 8px; margin-top: 5px;">
        </div>

        <div style="margin: 15px 0;">
            <label for="payload">Payload (JSON) *</label>
            <textarea id="payload" name="payload" rows="10" required style="width: 100%; padding: 8px; margin-top: 5px; font-family: monospace;">{{ block.payload|json_encode(constant('JSON_PRETTY_PRINT')) }}</textarea>
        </div>

        <div style="margin: 15px 0;">
            <label for="position">Position</label>
            <input type="number" id="position" name="position" value="{{ block.position }}" style="width: 100%; padding: 8px; margin-top: 5px;">
        </div>

        <button type="submit" style="padding: 10px 20px; background: #007bff; color: white; border: none; cursor: pointer;">Enregistrer</button>
    </form>
{% endblock %}
